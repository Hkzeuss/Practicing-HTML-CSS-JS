


def pt_bac1(a,b):
    if a == 0:
        if b == 0:
            print("Pt vô số nghiệm")
        else:
            print("pt vô nghiệm")    
    else:
        x = -b/a
        print("pt có nghiệm là: ", x)
        
a = float(input("Nhập a: "))
b = float(input("Nhập b: "))

pt_bac1(a,b)                      